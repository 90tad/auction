<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:fontFamily">@font/maven_pro_regular</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ProductProperty">
        <item name="fontFamily">@font/maven_pro_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/base_margin_4</item>
    </style>

    <style name="SocietyIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/colorGray</item>
        <item name="android:layout_width">@dimen/icon_12</item>
        <item name="android:layout_height">@dimen/icon_12</item>
        <item name="android:layout_marginRight">@dimen/base_margin_16</item>
    </style>

    <style name="RateSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="AuctioncHistoryHeaderText">
        <item name="android:paddingBottom">@dimen/base_margin_4</item>
        <item name="android:paddingTop">@dimen/base_margin_4</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
