<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="lollipop">
    <item
        android:id="@+id/state_checked"
        android:drawable="@drawable/ic_search_black_24dp"
        android:state_checked="true" />
    <item
        android:id="@+id/state_default"
        android:drawable="@drawable/ic_search_black_24dp" />
    <transition
        android:drawable="@drawable/ic_search_animation"
        android:fromId="@id/state_default"
        android:reversible="true"
        android:toId="@id/state_checked" />
</animated-selector>
